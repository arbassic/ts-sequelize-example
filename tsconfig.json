{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": true,
        "target": "es6",
        "baseUrl": "./src",
        "paths": {
            "*": ["*", "./src/*", "/*", "/src/*"],
        },
        "outDir": "dist",
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}